<!DOCTYPE html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta http-equiv='X-UA-Compatible' content='IE=edge' />
		<meta name='viewport' content='width=device-width, initial-scale=1.0' />
		<title>{{meta.title}}</title>
		<meta name='description' content='{{meta.description}}'>
		<link rel="icon" type="image/x-icon" href="/img/favicon.png">

		<link rel='stylesheet' href='/styles/main.css' />
		{{#each css}}
			<link rel='stylesheet' href='/styles/{{this}}.css' />
		{{/each}}

			<script src='/scripts/dist/main.js' type="module"></script>
		{{#each js}}
			<script src='/scripts/dist/{{this}}.js' type="module"></script>
		{{/each}}

		{{#if (or this.headings this.footerControls)}}
			<link rel='stylesheet' href='/styles/partials/header-footer.css' />
		{{/if}}

		<link rel="manifest" href="../manifest.json">
		<meta name="currentView" content="{{meta.viewName}}">

	</head>
	<body>

	{{> header}}
	{{{body}}}
	{{> footer}}

	</body>
</html>