{
	"name": "pokedex-from-server",
	"version": "1.0.0",
	"description": "![pwa](https://user-images.githubusercontent.com/3104648/28351989-7f68389e-6c4b-11e7-9bf2-e9fcd4977e7a.png)",
	"main": "index.ts",
	"scripts": {
		"start": "node --experimental-specifier-resolution=node --loader ts-node/esm ./index.ts",
		"dev": "npm run dev-server & npm run dev-client",
		"dev-server": "ts-node --esm index.ts",
		"dev-serverrr": "nodemon -e '*' --exec \"node --require ts-node/register --inspect index.ts\"",
		"dev-client": "",
		"prebuild": "rimraf ./public",
		"build": "npm-run-all build:*",
		"build:css": "node build-scripts/build-styles.js",
		"build:js": "node build-scripts/build-scripts.js"
	},
	"nodemonConfig": {
		"ext": "ts,js,hbs"
	},
	"author": "Laurens256",
	"license": "MIT",
	"dependencies": {
		"compression": "^1.7.4",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"express-handlebars": "^7.0.2"
	},
	"devDependencies": {
		"@types/compression": "^1.7.2",
		"@types/express": "^4.17.17",
		"@types/node": "^18.15.3",
		"gulp": "^4.0.2",
		"gulp-autoprefixer": "^8.0.0",
		"gulp-clean-css": "^4.3.0",
		"gulp-concat": "^2.6.1",
		"gulp-typescript": "^6.0.0-alpha.1",
		"gulp-uglify": "^3.0.2",
		"nodemon": "^2.0.21",
		"npm-run-all": "^4.1.5",
		"rimraf": "^4.4.1",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.2"
	},
	"type": "module"
}
